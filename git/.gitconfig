[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work
[includeIf "gitdir:~/personal/"]
    path = ~/.gitconfig-personal
[core]
	editor = code --wait
	autocrlf = input
[push]
	default = current
[fetch]
	prune = true
[pull]
	rebase = true
[alias]
	bclean = !git fetch --prune && git branch --merged | egrep -v \"(^\\*|main|master|develop|release/)\" | xargs git branch -d
